	# add "-g"
	CFLAGS="$CFLAGS -g"
	AS_CASE([$GCC-$host_os],
		[yes-aix*], [CFLAGS="$CFLAGS -gxcoff"])
	changedCFLAGS=
	for flag in $origCFLAGS ; do
		AS_CASE([" $CFLAGS "],
			[*" $flag "*], [],
			[changedCFLAGS="$changedCFLAGS, removed $flag"])
	done
	for flag in $CFLAGS ; do
		AS_CASE([" $origCFLAGS "],
			[*" $flag "*], [],
			[changedCFLAGS="$changedCFLAGS, added $flag"])
	done
	changedCFLAGS=`echo $changedCFLAGS | sed -e 's|^, ||'`
