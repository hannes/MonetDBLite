@%:@endif

/* define printf format for printing pointer values */
@%:@if defined(__STDC_VERSION__) && __STDC_VERSION__ >= 199901
@%:@define PTRFMT		"%p"
@%:@define PTRFMTCAST		/* no cast needed */
@%:@elif defined(_MSC_VER)
